<fm namespace="ArcadeGameMaker">
    <feature name="AGM">
        <mandatory>
            <feature name="Action">
                <mandatory>
                    <feature name="Move"/>
                </mandatory>
                <mandatory>
                    <feature name="Collision"/>
                </mandatory>
            </feature>
        </mandatory>
        <mandatory>
            <feature name="Services">
                <mandatory>
                    <feature name="Play"/>
                </mandatory>
                <mandatory>
                    <feature name="Pause"/>
                </mandatory>
                <optional>
                    <feature name="Save"/>
                </optional>
            </feature>
        </mandatory>
        <mandatory>
            <feature name="Configuration"/>
        </mandatory>
        <mandatory>
            <feature name="Rules">
                <alternative>
                    <feature name="Brickles"/>
                    <feature name="Pong"/>
                    <feature name="Bowling"/>
                </alternative>
            </feature>
        </mandatory>
    </feature>
</fm>
