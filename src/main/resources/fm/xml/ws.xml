<fm namespace="WiperSystem">
    <feature name="WiperSystem">
        <mandatory>
            <feature name="Sensor">
                <alternative>
                    <feature name="sLow"/>
                    <feature name="sHigh"/>
                </alternative>
            </feature>
        </mandatory>
        <optional>
            <feature name="PermanentWiper"/>
        </optional>
        <mandatory>
            <feature name="Wiper">
                <alternative>
                    <feature name="wLow"/>
                    <feature name="wHigh"/>
                </alternative>
            </feature>
        </mandatory>
    </feature>
</fm>
