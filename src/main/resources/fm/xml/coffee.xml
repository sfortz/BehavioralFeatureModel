<fm namespace="VendingMachine">
    <feature name="VM">
        <mandatory>
            <feature name="BEV">
                <mandatory>
                    <feature name="COF"/>
                </mandatory>
                <optional>
                    <feature name="TEA"/>
                </optional>
                <optional>
                    <feature name="CAP"/>
                </optional>
            </feature>
        </mandatory>
        <optional>
            <feature name="TON"/>
        </optional>
        <optional>
            <feature name="X"/>
        </optional>
        <mandatory>
            <feature name="CUR">
                <alternative>
                    <feature name="EUR"/>
                    <feature name="DOL"/>
                </alternative>
            </feature>
        </mandatory>
        <feature_constraints>
            <exclusions>
                <exclude conflict1="DOL"  conflict2="CAP"/>
            </exclusions>
            <requirements>
                <requires feature="CAP"  dependency="TON"/>
            </requirements>
        </feature_constraints>
    </feature>
</fm>
