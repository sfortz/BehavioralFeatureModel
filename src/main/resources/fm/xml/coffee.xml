<fm namespace="VendingMachine">
    <feature name="VM">
        <mandatory>
            <feature name="BEV">
                <mandatory>
                    <feature name="COF"/>
                </mandatory>
                <optional>
                    <feature name="TEA"/>
                </optional>
                <optional>
                    <feature name="CAP"/>
                </optional>
            </feature>
        </mandatory>
        <optional>
            <feature name="TON"/>
        </optional>
        <optional>
            <feature name="X"/>
        </optional>
        <mandatory>
            <feature name="CUR">
                <alternative>
                    <feature name="EUR"/>
                    <feature name="DOL"/>
                </alternative>
            </feature>
        </mandatory>
        <feature_constraints>
            <feature_constraints>
                <feature_constraint fexpression="!DOL || !CAP"/>
                <feature_constraint fexpression="!CAP || TON"/>
            </feature_constraints>
        </feature_constraints>
    </feature>
</fm>
